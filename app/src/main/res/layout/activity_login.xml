<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="352dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        app:srcCompat="@drawable/subcri2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="161dp"
        android:layout_height="17dp"
        android:fontFamily="@font/biryani"
        android:text="¿Olvidaste tu contraseña?"
        android:textColor="@color/vino"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />

    <EditText
        android:id="@+id/eUsuario"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/ic_action_us2"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/biryani"
        android:hint="@string/escribe_tu_usuario"
        android:inputType="textPersonName"
        android:paddingVertical="0dp"
        android:textColor="@color/vino"
        android:textColorHighlight="#453E3E"
        android:textColorHint="#97575756"
        android:textColorLink="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

    <EditText
        android:id="@+id/eContrasena"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="@font/biryani"
        android:gravity="center_vertical"
        android:hint="@string/escribe_tu_contrase_a"
        android:paddingVertical="0dp"
        android:textColor="@color/vino"
        android:textColorHint="#A15A5757"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/biryani_semibold"
        android:text="@string/contrase_a"
        android:textColor="@color/negro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/biryani_semibold"
        android:text="@string/usuario"
        android:textColor="@color/negro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324" />

    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="338dp"
        android:layout_height="36dp"
        android:background="@drawable/ingresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797" />

    <Button
        android:id="@+id/buttonRegistrate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="375dp"
        android:layout_height="40dp"

        android:fontFamily="@font/biryani_semibold"
        android:text="¿No tienes una cuenta? Regístrate."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/vino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />


</androidx.constraintlayout.widget.ConstraintLayout>